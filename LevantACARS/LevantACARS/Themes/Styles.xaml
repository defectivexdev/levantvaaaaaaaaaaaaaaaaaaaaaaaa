<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- ══════════════════════════════════════════════════════════════════
         Levant VA — "Midnight Aviation" Styles
         8px grid · Segoe UI Variable / Inter · No hard borders · Elevation
         ══════════════════════════════════════════════════════════════════ -->

    <!-- ── Window ──────────────────────────────────────────────────────── -->
    <Style x:Key="MainWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource SurfaceDarkBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI Variable, Inter, Segoe UI, sans-serif" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextElement.Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- ── Instrument Card (telemetry readout, no border, shadow via bg) ── -->
    <Style x:Key="MetricCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Background" Value="{StaticResource SurfaceCardBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="UniformCornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,20" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0" />
    </Style>

    <!-- ── Elevated Card (panels / sections) ──────────────────────────── -->
    <Style x:Key="ElevatedCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Background" Value="{StaticResource SurfaceElevatedBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="UniformCornerRadius" Value="16" />
        <Setter Property="Padding" Value="24,24" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0" />
    </Style>

    <!-- ── Text Styles ─────────────────────────────────────────────────── -->
    <Style x:Key="HeadingStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <Style x:Key="SubheadingStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Section label — spaced caps, small, muted -->
    <Style x:Key="LabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Instrument value — monospace, large, bright -->
    <Style x:Key="ValueStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontSize" Value="26" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Cascadia Mono, Consolas, monospace" />
    </Style>

    <!-- Unit suffix — small, muted, baseline-aligned -->
    <Style x:Key="UnitStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Margin" Value="4,0,0,4" />
    </Style>

    <!-- ── Status Indicator ───────────────────────────────────────────── -->
    <Style x:Key="StatusDot" TargetType="Ellipse">
        <Setter Property="Width" Value="8" />
        <Setter Property="Height" Value="8" />
        <Setter Property="Margin" Value="0,0,8,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- ── Nav Rail Button ────────────────────────────────────────────── -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}" CornerRadius="8" Margin="2,1">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource SurfaceHighlightBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource SurfaceElevatedBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── Activity Log ───────────────────────────────────────────────── -->
    <Style x:Key="DarkListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource SurfaceDarkBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontFamily" Value="Cascadia Mono, Consolas" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <!-- ── Card (Border-based, no border, elevation via bg) ───────────── -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceCardBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,20" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <!-- ── Telemetry Instrument Card (Border-based) ───────────────────── -->
    <Style x:Key="InstrumentCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceCardBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20,16" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

</ResourceDictionary>
