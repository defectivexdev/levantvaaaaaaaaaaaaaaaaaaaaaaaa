<Window x:Class="LevantACARS.Views.RepairSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Levant ACARS"
        Width="420" Height="200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="#0D1117" CornerRadius="12" BorderBrush="#1C2333" BorderThickness="1">
        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Levant ACARS"
                       FontSize="20" FontWeight="Bold"
                       Foreground="#4FC3F7" />

            <TextBlock Grid.Row="2"
                       x:Name="StatusText"
                       Text="Verifying components..."
                       FontSize="13"
                       Foreground="#9CA3AF" />

            <ProgressBar Grid.Row="4"
                         x:Name="ProgressBar"
                         IsIndeterminate="True"
                         Height="4"
                         Background="#1C2333"
                         Foreground="#4FC3F7"
                         BorderThickness="0" />
        </Grid>
    </Border>
</Window>
